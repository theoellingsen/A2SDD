<Window
    
    x:Class="A2SDDWPF.MainWindow" 
     

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:c="clr-namespace:A2SDD"
        xmlns:local="clr-namespace:A2SDD"
        xmlns:Researcher="clr-A2SDD:Researcher;assembly=Researcher">

    <Window.Resources>
        <local:Researcher x:Key="Researcher" />
    </Window.Resources>
    
    <Window.DataContext>
        <local:Researcher/>
    </Window.DataContext>

    <Grid MinWidth="50" HorizontalAlignment="Left">
        <ListBox x:Name="ResearcherListView" Margin="1,1,0,1" Opacity="0.95" Background="#FFCCCCCC" Grid.Row="1" HorizontalAlignment="Left" MinWidth="50" Width="150" HorizontalContentAlignment="Left">

            <ListBox ItemsSource="{Binding Source={StaticResource ResearcherListView}}"></ListBox>
  
        </ListBox>



    </Grid>
    

</Window>

