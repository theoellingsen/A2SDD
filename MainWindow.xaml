<Window
    
    x:Class="A2SDDWPF.MainWindow" 
     

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanResize" MinHeight="450" MinWidth="800"
        xmlns:c="clr-namespace:A2SDD"
        xmlns:local="clr-namespace:A2SDD"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:Researcher="clr-A2SDD:Researcher;assembly=Researcher">




    <Window.Resources>
        <DataTemplate DataType="{x:Type local:Researcher}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=FamilyName}"/>
                <TextBlock Text=", "/>
                <TextBlock Text="{Binding Path=GivenName}"/>
                <TextBlock Text=" ("/>
                <TextBlock Text="{Binding Path=Title}"/>
                <TextBlock Text=")"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="0,0,625,0">
        <ListBox x:Name="ResearcherListView" Margin="0,1,0,1" Opacity="0.95" Background="#FFCCCCCC"  HorizontalAlignment="Stretch" VerticalAlignment ="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <ListBox SelectionChanged="ListBox_SelectionChanged"
                 ItemsSource="{Binding Source={StaticResource ResearcherListView}}" Margin="0,15,0,0"/>
            <TextBox Text="Enter Search Here" IsReadOnly ="False" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" />
        </ListBox>

        <DockPanel LastChildFill="False">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Filter">
                    <MenuItem Header="A" />
                    <MenuItem Header="B"/>
                    <MenuItem Header="C"/>
                    <MenuItem Header="D"/>
                    <MenuItem Header="E"/>
                </MenuItem>

                <MenuItem Header="Generate Report">
                    <MenuItem Header="Poor" Click="FilterClickPoor"/>
                    <MenuItem Header="Below Expectations" Click="FilterClickBelow"/>
                    <MenuItem Header="Meeting Minimum" Click="FilterClickMeeting"/>
                    <MenuItem Header="Star Performers" Click="FilterClickStar"/>
                </MenuItem>
            </Menu>
        </DockPanel>
    </Grid>
    

</Window>
    
    

