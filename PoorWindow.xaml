<Window x:Class="A2SDDWPF.PoorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2SDD"
        xmlns:Researcher="clr-A2SDD:Researcher;assembly=Researcher"
        mc:Ignorable="d"
        Title="ReportWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType="{x:Type local:Researcher}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Path=FamilyName}"/>
                <TextBlock Text=", "/>
                <TextBlock Text="{Binding Path=GivenName}"/>
                <TextBlock Text=" ("/>
                <TextBlock Text="{Binding Path=Title}"/>
                <TextBlock Text=")"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="PoorListView" Margin="0,1,0,1" Opacity="0.95" Background="#FFCCCCCC" Grid.Row="1" HorizontalAlignment="Left" MinWidth="50" HorizontalContentAlignment="Left">
            <ListBox SelectionChanged="ListBox_SelectionChanged"
                 ItemsSource="{Binding Source={StaticResource PoorListView}}" Margin="0,15,0,0"/>
        </ListBox>
    </Grid>
</Window>
